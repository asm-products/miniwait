<h2>Edit Company</h2>
<div>
  <% # if flash[:user_message] %>
  <p class="user_message"><%= flash[:user_message] %></p>
  <% # end %>
</div>

<form class="form-horizontal" role="form" action="/company/update" method="post">

  <div class="form-group">
    <%= label_tag(:name, 'Company name:', :class => 'control-label col-sm-2') %>
    <div class="col-sm-10">
      <%= text_field_tag(:name, @company.name, :class => 'form-control') %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag(:category, 'Category:', :class => 'control-label col-sm-2') %>
    <%= collection_select(nil, :category_id, Category.all, :id, :description, :selected => @company.category_id, :class => 'control-label col-sm-2') %>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Update</button>
    </div>
  </div>
</form>