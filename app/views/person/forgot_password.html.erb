<div>

<h2>Forgot Password</h2>
<div class='text-info'>Enter your user name or email address below to receive a password reset link.</div>
  <%= render 'shared/user_message' %>
   <form class="form-horizontal" role="form" action="/person/forgot_password" method="post">
   <div class='form-group'>
    <%= label_tag(:username, "User name:", :class => 'form_label col-sm-2') %>
    <%= text_field_tag(:username, nil, :class => 'form_field col-sm-3') %>
  </div>

  <div class='form-group'>
     <%= label_tag(:email_address, "Email address:", :class => 'form_label col-sm-2') %>
    <%= password_field_tag(:email_address, nil, :class => 'form_field col-sm-3') %>
  </div>

  <div class='form-group'>
    <%= label_tag(:btn, '', :class => 'form_label col-sm-2') %>
    <%= submit_tag("Find Me", :class => 'btn btn-primary') %>
  </div>
  
</form>
</div>

