<div class='container-fluid'>

  <h2>Log In</h2>
  <%= render 'shared/user_message' %>

  <form class="form-horizontal" role="form" action="/person/authenticate" method="post">

    <div class='form-group'>
      <%= label_tag(:username, "User name:", :class => 'form_label col-sm-2') %>
      <%= text_field_tag(:username, nil, :class => 'form_field col-sm-3', :autofocus => true) %>
    </div>

    <div class='form-group'>
      <%= label_tag(:password, "Password:", :class => 'form_label col-sm-2') %>
      <%= password_field_tag(:password, nil, :class => 'form_field col-sm-3') %>
    </div>

    <div class='form-group'>
      <%= label_tag(:btn, ' ', :class => 'form_label col-sm-2') %>
      <%= submit_tag("Log In", :class => 'btn btn-primary') %>
    </div>

    <div class='spacer20'>&nbsp;</div>

    <div class='text-muted'>
      Can't remember your login information? It happens. Click <%= link_to "here", :controller => "person", :action => "forgot_password" %> for help.
    </div>

  </form>

</div>