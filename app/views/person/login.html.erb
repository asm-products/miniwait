<div class="entry-form">

<h2>Log In</h2>
<%= form_tag({:controller => "person", :action => "authenticate"}, :method => "post") do %>

  <% # if flash[:user_message] %> 
    <p class="user_message"><%= flash[:user_message] %></p>
  <% # end %> 
  
  <%= label_tag(:username, "User name:", :class => 'form_label') %>
  <%= text_field_tag(:username, nil, :class => 'form_field') %>
  <p>

  <%= label_tag(:password, "Password:", :class => 'form_label') %>
  <%= password_field_tag(:password, nil, :class => 'form_field') %>
  <p>

  <%= submit_tag("Log In") %>
  
  <p>
  <%= link_to "Forgot password", :controller => "person", :action => "forgot_password" %>
  
<% end %>
</div>

